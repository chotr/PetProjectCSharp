                    <div id="addressBookTab" class="container tab-pane fade">
                        <br>
                        <div class="container">
                            <h4>

                                @PetsProject.Resources.Data.YourAddress
                                <button type="button" class="btn btn-addAddress"
                                        onclick="addNewAddress()">
                                    <i class='fa fa-plus'></i>
                                </button>
                            </h4>
                            <br />
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@PetsProject.Resources.Data.Address</th>
                                        <th>@PetsProject.Resources.Data.Status</th>
                                    </tr>
                                </thead>
                                <tbody id="tableAddressBook">
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model.listAddress)
                                        {
                                            <span>
                                                @if (item.status == "DEFAULT")
                                                {
                                                <tr>
                                                    <input type="hidden" id="idAddressDefault"
                                                           value="@item.id">

                                                    <td>@item.address</td>
                                                    <td id="statusAB@(item.id)">@PetsProject.Resources.Data.Default</td>
                                                </tr>
                                            }
                                                @if (item.status != "DEFAULT")
                                                {
                                                    <tr>
                                                        <td>@item.address</td>
                                                        <td id="statusAB@(item.id)">
                                                            <button type="button"
                                                                    class="btn btn-warning" name="@item.id"
                                                                    onclick="setAddressDefault(name)">
                                                                @PetsProject.Resources.Data.SetDefault
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                                </span>
                                            }
                                        }
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <div id="receivedBill" class="container tab-pane fade">
                        <br>
                        <h4>@PetsProject.Resources.Data.ReceivedBill</h4>
                        @if (Model.listReceivedBill.Count() > 0)
                        {
                            <p id="checkNumReceivedBill">
                                @PetsProject.Resources.Data.YouHaveAll <span>@(Model.listReceivedBill.Count()) @PetsProject.Resources.Data.AtNow</span>.
                            </p>

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Oder day</th>
                                        <th>Total price</th>
                                        <th>Payment</th>
                                        <th>Order detail</th>
                                    </tr>
                                </thead>
                                <tbody id="tableBill">
                                    @{int i = 0;}
                                    @foreach (var item in Model.listReceivedBill)
                                    {
                                        i++;

                                        <tr>
                                            <td class="td"><span>@(item.fullDateTime)</span></td>
                                            <td class="td">@item.totalCost</td>
                                            <td>@item.payment</td>
                                            <td>
                                                <button data-toggle="modal" data-target="#@("detai" + i)" class="btn btn-detail" id="btn-detail">Detail</button>
                                                <div class="modal fade" id="@("detai" + i)" tabindex="-1" role="dialog" aria-labelledby="@("detai" + i + "Label")" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                                                        <div class="modal-content">
                                                            <div>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-right: 15px">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">Bill details</h5>

                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="order_details_table">
                                                                    <h2>At @(item.fullDateTime)</h2>
                                                                    <div class="table-responsive">
                                                                        <table class="table">
                                                                            <tbody>
                                                                                <tr>
                                                                                    <th scope="col">Product</th>
                                                                                    <th scope="col">Quantity</th>
                                                                                    <th scope="col">Total</th>
                                                                                </tr>
                                                                                @foreach (var itembd in item.listBillDetails)
                                                                                {
                                                                                    <tr>
                                                                                        <td>
                                                                                            <p>@itembd.product</p>
                                                                                        </td>
                                                                                        <td>
                                                                                            <h5>x @(itembd.quantity)</h5>
                                                                                        </td>
                                                                                        <td>
                                                                                            <p>@itembd.price</p>
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                                <tr>
                                                                                    <td>
                                                                                        <h4>Subtotal</h4>
                                                                                    </td>
                                                                                    <td>
                                                                                        <h5></h5>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p>@item.totalCost</p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <h4>Payment</h4>
                                                                                    </td>
                                                                                    <td>
                                                                                        <h5></h5>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p>@item.payment</p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <h4>Address</h4>
                                                                                    </td>
                                                                                    <td>
                                                                                        <h5></h5>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p>@item.address</p>
                                                                                    </td>
                                                                                </tr>

                                                                                @if (item.note != "")
                                                                                {
                                                                                    <tr>
                                                                                        <td>
                                                                                            <h4>Note</h4>
                                                                                        </td>
                                                                                        <td>
                                                                                            <h5></h5>
                                                                                        </td>
                                                                                        <td>
                                                                                            <p>@item.note</p>
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                                <tr>
                                                                                    <td>
                                                                                        <h4>Shipping</h4>
                                                                                    </td>
                                                                                    <td>
                                                                                        <h5></h5>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p>Free</p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <h4>Total</h4>
                                                                                    </td>
                                                                                    <td>
                                                                                        <h5></h5>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p>
                                                                                            <b>@item.totalCost</b>
                                                                                        </p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <h4>Status</h4>
                                                                                    </td>
                                                                                    <td>
                                                                                        <h5></h5>
