@model PetsProject.Models.ManageAccountModel

@{
    Layout = "~/Views/Layout/ManageAccountLayout.cshtml";
}
<div class="container">
    <br />
    <div class="row features-inner">
        <div class="container ">
            <div class="container">
                <h2>@PetsProject.Resources.Data.ManageYourAccount</h2>
                <br>
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="tab1"
                           data-toggle="tab" href="#general">@PetsProject.Resources.Data.General</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" data-toggle="tab" id="tab2"
                               href="#profile">@PetsProject.Resources.Data.Profile</a>
                        </li>*@
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" id="tab3"
                           href="#addressBookTab">@PetsProject.Resources.Data.AddressBook</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" id="tab4"
                           href="#receivedBill">@PetsProject.Resources.Data.ReceivedBill</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" id="tab4"
                           href="#onWayBill">@PetsProject.Resources.Data.OnWayBill</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" id="tab4"
                           href="#deliveredBill">@PetsProject.Resources.Data.DeliveredBill</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" id="tab5"
                           href="#cancelledBill">@PetsProject.Resources.Data.CancelledBill</a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div id="general" class="container tab-pane active">
                        <div class="row gutters-sm">
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex flex-column align-items-center text-center">
                                            <div class="imgg">
                                                <img src="~/@(Model.avatar)" alt="Admin" class="rounded-circle" width="150" height="150">
                                            </div>
                                            <div class="mt-3">
                                                <h4>@(Model.username)</h4>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <form id="uploadAvatar" enctype="multipart/form-data">
                                                <div class="mb-3">
                                                    <div>
                                                        <label class="form-label">Change your avatar</label>
                                                    </div>
                                                    <label class="btn btn-default btn-sm center-block btn-file">
                                                        <span>Choose file</span>
                                                        <input type="file" id="imgInp" name="file" style="display: none;">
                                                    </label>
                                                    <div>
                                                        <button type="submit" class="btn btn-warning" id="saveAvatar">@PetsProject.Resources.Data.SaveMyAvatar</button>
                                                        <p id="uploadImageMessage"></p>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Full Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @(Model.fullname)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @(Model.email)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Phone</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @(Model.phone)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Adress</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                @(Model.defaultAddress)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <!-- Button trigger modal -->
                                                <button type="button" class="btn btn-editInfo btn-block" data-toggle="modal" data-target="#editInfo">
                                                    <span>Edit your information</span>
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                <div class="modal fade " id="editInfo" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="editInfoLabel" aria-hidden="true">

                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-right: 15px">
                                                                    <span aria-1)hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="staticBackdropLabel">Edit information</h5>

                                                            </div>
                                                            <div class="modal-body">
                                                                <div id="basicInfoEdit">
                                                                    <form id="editBasicInfoForm">
                                                                        <div class="form_group">
                                                                            <label class="label_form">@PetsProject.Resources.Data.Username </label>
                                                                            <input type="text" class="form-control"
                                                                                   value="@Model.username" id="username" required>
                                                                        </div>
                                                                        <div class="form_group">
                                                                            <label class="label_form">@PetsProject.Resources.Data.FullName </label>
                                                                            <input type="text" class="form-control"
                                                                                   value="@Model.fullname" id="fullname" required>
                                                                        </div>
                                                                        <div class="form_group">
                                                                            <label class="label_form">@PetsProject.Resources.Data.Phone</label>
                                                                            <input type="text" class="form-control"
                                                                                   value="@Model.phone" id="phone" pattern="(\d\D*){10}"
                                                                                   title="Phone number should only contain 10 numbers."
                                                                                   required>
                                                                        </div>
                                                                        <div class="form_group">
                                                                            <label class="label_form">@PetsProject.Resources.Data.Email</label>
                                                                            <input type="text" class="form-control"
                                                                                   value="@Model.email" id="email"
                                                                                   pattern="[a-z0-9._%+-]+@(" @")[a-z0-9.-]+\.[a-z]{2,}$"
                                                                                   title="Email address must like example@gmail.com" required>
                                                                        </div>
                                                                        <div class="form_group">
                                                                            <label class="label_form">@PetsProject.Resources.Data.PermanentAddress</label>
                                                                            <input type="text" class="form-control" value="@Model.address"
                                                                                   id="address" required>
                                                                        </div>
                                                                        <div class="btn_sbm_ele">
                                                                            <button type="submit" class="btn btn-submit">@PetsProject.Resources.Data.Save</button>
                                                                            <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>
                                                                        </div>
                                                                    </form>

                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-sm-4">
                                                <button type="button" class="btn btn-editPass btn-block" data-toggle="modal" data-target="#editPass">
                                                    <span>Change your password</span>
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                <div class="modal fade" id="editPass" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="editPassLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-right: 15px">
                                                                    <span aria-1)hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="staticBackdropLabel">Change password</h5>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div id="siginInfoEdit">
                                                                    <form name="changeSignin" id="sendMail"
                                                                          onsubmit="return saveProcess()">
                                                                        <div class="form_group">
                                                                            <label class="label_form">@PetsProject.Resources.Data.OldPass:</label>
                                                                            <input type="password" class="form-control" name="oldpass"
                                                                                   id="oldpass" required>
                                                                        </div>
                                                                        <div class="form_group">
                                                                            <label class="label_form">@PetsProject.Resources.Data.NewPass:</label>
                                                                            <input type="password" class="form-control" name="newpass"
                                                                                   id="newpass" required>
                                                                        </div>
                                                                        <div class="form_group">
                                                                            <label class="label_form">@PetsProject.Resources.Data.ConfirmPass:</label>
                                                                            <input type="password" class="form-control" id="confirmpass"
                                                                                   name="confirmpass" required>
                                                                        </div>
                                                                        <div class="btn_sbm_ele">
                                                                            <button type="submit" class="btn btn-submit">@PetsProject.Resources.Data.Change</button>
                                                                            <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>
                                                                        </div>

                                                                        @*<button type="submit" class="btn btn-warning">@PetsProject.Resources.Data.Change</button>*@
                                                                    </form>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-sm-4">
                                                <button type="button" class="btn btn-deleteAcc btn-block" data-toggle="modal" data-target="#deleteAcc">
                                                    <span>Delete your account</span>
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                                <div class="modal fade" id="deleteAcc" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="deleteAccLabel" aria-hidden="true">

                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-right: 15px">
                                                                    <span aria-1)hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="staticBackdropLabel">Confirm delete account</h5>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form method="POST" action="SendRequestToDeleteAccount">

                                                                    <p><span style="color: #ffc107; margin-right: 5px;"><i class="bi bi-exclamation-triangle-fill"></i></span> Are you sure want to delete your account. Thinking carefully! If you want, please reenter your password, we will send your request to admin.</p>
                                                                    <div class="form_group">
                                                                        <label class="label_form">Your password:</label>
                                                                        <button type="button" id="validateBtn" class="btn btn-warning" onclick="checkPasswordToDeleteAccount_ajax_submit()">Validate</button>
                                                                        <input type="password" class="form-control" id="passwordToDeleteAccount" required>
                                                                        <p id="messagePassword"></p>
                                                                        <div class="btn_sbm_ele">
                                                                            <button type="button" id="sendMyRequestBtn" onclick="sendRequestToDeleteAccount()" class="btn btn-delete" disabled>Send my request</button>
                                                                            <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>
                                                                        </div>
                                                                        <p id="messagePassword"></p>
                                                                    </div>

                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>


                                            </div>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

